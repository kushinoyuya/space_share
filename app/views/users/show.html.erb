<%= render "layouts/setting" %>

<div class="container-user-index">
    <div class="row">


        <%# User %>
        <section id="my-profile">
            <div class="container">
                <div class="row">
                    <div class="box">
                        <h2 class="my-profile-title text-center">My Profile</h2>
                        <h3 class="text-center"><%= @user.last_name %> <%= @user.first_name %> さんの登録情報</h3>
                        <table class="table table-striped table-responsive">
                            <thead>
                                <tr>
                                    <th>氏名</th>
                                    <th>カナ</th>
                                    <th>電話番号</th>
                                    <th>メールアドレス</th>
                                    <th>パスワード</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><%= @user.last_name %> <%= @user.first_name %></td>
                                    <td><%= @user.last_kana %> <%= @user.first_kana %></td>
                                    <td><%= @user.phone_number %></td>
                                    <td><%= @user.email %></td>
                                    <td><%= @user.encrypted_password = "●●●●" %></td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="btn pull-left" ><%= link_to "編集", edit_user_path(@user.id), class: "btn btn-primary" %></div>
                        <div class="btn pull-left" ><%= link_to "退会", user_registration_path, data: { confirm: "本当によろしいですか?" }, method: :delete, class:"btn btn-danger" %></div>
                    </div><%# User-box %>
                </div><%# User-row %>
            </div><%# User-container %>
        </section>


        <%# 予約 %>
        <section id="my-reservation">
            <div class="container">
                <div class="row">
                    <h1 class="my-reservation-title text-center">My Reservation</h1>
                    <table class="table table-striped table-responsive">

                        <thead>
                            <tr>
                                <th>店舗名</th>
                                <th>店舗住所</th>
                                <th>利用日</th>
                                <th>利用時間</th>

                            </tr>
                        </thead>
                        <tbody>
                        <%# reservation-Each %>
                        <% @reservations.each do |reservation| %>
                            <tr>
                                <td><%= reservation.restaurant.restaurant_name %></td>
                                <td><%= reservation.restaurant.restaurant_address %></td>
                                <td><%= reservation.usage_day.strftime('%m月%d日') %></td>
                                <td><%= reservation.use_start_time.strftime('%H時%M分') %>〜<%= reservation.use_end_time.strftime('%H時%M分') %></td>
                                <td>
                                    <div class="btn" ><%= link_to "予約変更", edit_reservation_path(reservation), class: "btn btn-primary" %></div>
                                </td>
                            </tr>
                        <% end %>
                        <%# reservation-END %>
                        </tbody>
                    </table>

                </div>
            </div>
        </section>


    </div><%# row %>
</div><%# container-user-index %>
