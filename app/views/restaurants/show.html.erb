<%= render "layouts/setting" %>
<div class="container-show">
    <div class="row">

        <section id="content">
            <div class="container">
                <div class="row">
                    <h1 class="content-title text-center">Content</h1>
                    <!-- 画像表示 -->
                        <div class="col-xs-6">
                            <%# slick実装 %>
                            <div class="restaurant-image-show">
                                <!-- Active-Strage 店舗画像  -->
                                <% @restaurant.images.each do |images| %>
                                    <%= image_tag images, :size =>'300x190', class: 'trim' %>
                                <% end %>
                            </div>
                        </div>

                        <!-- 店舗情報(右) -->
                        <div class="col-xs-6">
                            <div class="info-box">
                                <!-- 店舗名 -->
                                <h2 class="text-center"><%= @restaurant.restaurant_name %></h2>

                                <!-- アクセス -->
                                <p class="restaurant-show">
                                    <span class="glyphicon glyphicon-map-marker">
                                        <%= @restaurant.prefecture %>
                                        <%= @restaurant.restaurant_address %>
                                    </span>
                                </p>

                                <!-- 利用時間(利用可能開始日時〜利用可能終了日時) -->
                                <p class="restaurant-show">
                                    <span class="glyphicon glyphicon-time"> 利用可能時間</span>
                                    <p>
                                        開始時間:<span><%= @restaurant.available_start_time.strftime('%Y年%m月%d日 %H時%M分') %></span>
                                    </p>
                                    <p>
                                        終了時間:<span><%= @restaurant.available_end_time.strftime('%Y年%m月%d日 %H時%M分') %></span>
                                    </p>
                                </p>

                                <!-- 利用料金 -->
                                <p class="rasturant-show">
                                    ¥<%= @restaurant.scheduled_usage_fee %>/時間
                                </p>

                                <!-- 座席数 -->
                                <p class="restaurant-show">
                                    <span class="glyphicon glyphicon-user">
                                        ~<span><%= @restaurant.seat_number %></span>人
                                    </span>
                                </p>

                                <!-- 設備・サービス -->
                                設備/サービス
                                <%= @restaurant.facility %>
                                <p></p>

                                <!-- 予約フォーム -->
                                <% if user_signed_in? %>

                                    <%= link_to  "予約をする", restaurant_reservations_form_path(@restaurant), class: "btn btn-default", :style=>"display:inline-block;margin-left:15px;" %>

                                <% end %>

                            </div>
                        </div>

                </div><%# row %>
            </div><%# container %>
        </section>

        <section id="access">
            <div class="container">
                <div class="row">
                    <h1 class="access-title text-center">Access</h1>
                    <div class="access-inner">
                        <!-- Google Map使用 -->
                        <div id='map'>
                            <iframe width="700" height="420" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.co.jp/maps?f=q&amp;source=s_q&amp;hl=ja&amp;geocode=&amp;q=<%= @restaurant.restaurant_name %>&amp;aq=&amp;sll=35.975263,139.758453&amp;sspn=0.012763,0.027874&amp;brcurrent=3,0x6018beb343d20c51:0xf46ed726497237bd,0,0x6018beb35f1f38d7:0x6de0fd7e3d9ee138&amp;ie=UTF8&amp;hq=&amp;hnear=%E5%9F%BC%E7%8E%89%E7%9C%8C%E6%98%A5%E6%97%A5%E9%83%A8%E5%B8%82%E5%8D%97%EF%BC%91%E4%B8%81%E7%9B%AE%EF%BC%91%EF%BC%94%E2%88%92%EF%BC%91&amp;t=m&amp;z=14&amp;ll=<%= @geometry["lat"] %>,<%= @geometry["lng"] %>&amp;output=embed"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </section>


    <section id="review">
        <div class="container">
            <div class="row">
            <h1 class="review-title text-center">Review</h1>
            <div class="box-radius">
                <table class="table table-responsive">
                    <tbody>
                    <% if @reviews.any? %>
                    <% @reviews.each do |review| %>
                    <tr>
                        <td>
                            <p>投稿者：
                                <%= review.review_name %>
                                <% if user_signed_in?%>
                                    <% if review.user_id == current_user.id%>
                                <%= link_to "", restaurant_review_path(@restaurant, review),method: :delete,class:"btn btn-danger glyphicon glyphicon-trash pull-right",:data => {:disable_with => ""}%>
                                    <% end %>
                                <% end %>
                            </p>
                            <p>
                                <%# ヘルパーメソッド使用 %>
                                <%= simple_date(review.created_at) %>
                            </p>
                            <%# 投稿コメント %>
                            <p>
                                <%= review.comment %>
                            </p>
                        </td>
                    </tr>
                    <%end%>
                    <%else%>
                    <tr><td>レビューはまだありません。</td></tr>
                    <% end %>
                    <td class="text-center"><%= paginate @reviews %></td>
                    </tbody>
                </table>


            <%# レビュー投稿 %>
            <% if user_signed_in? %>
            <h4 class="glyphicon glyphicon-pencil" style="margin-top:-10px;">新規投稿・編集</h4>
            <div class="item-rev-edit">

                <%= form_for([@restaurant,@review]) do |f| %>
                    <p>名前</p>
                    <%= f.text_field :review_name,class:"form-control" ,placeholder:"ニックネームを入力"%>
                    <p>レビュー</p>
                    <%= f.text_area :comment,class:"form-control",placeholder:"レビューを入力（投稿は飲食店につき１件まで可能です。）" %>
                    <p></p>
                    <%# hidden_fieldで情報を渡す %>
                    <%#= f.hidden_field :restaurant_id, :value => @restaurant.id %>
                    <%= f.submit("レビューする",class: 'btn btn-primary center-block ') %>
                <% end %>
            </div>
            <% end %>
            </div>
        </div>
    </div><!-- row -->
</div><!-- container -->
    </section>
